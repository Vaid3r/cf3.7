 <div class="container">
   <p id="notice"><%= notice %></p>
 
   <div class="row" data-product-id="<%= @product.id %>">

    <!--<div class="col-sm-6 col-md-4">-->
    <div class="thumbnail">
    <% cache @product do %>

    <% if @product.image_url.present? %>
    <%= image_tag(@product.image_url, width: "350", class: "img-responsive img-zoom", data_zoom_image: "@product.image_url") %>
    <% end %>

      <div class="caption">
        <p>
          <strong>Name:</strong>
          <%= @product.name %>
        </p>             
        <p>
          <strong>Description:</strong>
          <%= @product.description %>
        </p>              
        <p>
          <strong>Color:</strong>
          <%= @product.color %>
        </p>
        <p>
          <strong>Price: $</strong>
          <%= @product.price %>
        </p>

      <%= form_with(url: '/payments/create') do |form| %>
      <%= render partial: "shared/stripe_checkout_button" %>
      <%= hidden_field_tag(:product_id, @product.id) %>
    <% end %>   


        <p>Product views: <%= @product.views %> </p>
        
          <p>Average Rating: <div class="rated" id="average-rating" data-score="<%= @product.average_rating %>"></div> </p>
          
          

          <%= render 'comments' %>
          <div class="alert alert-info" style="display:none" role="alert">A new comment was posted!</div>
          <%= render 'new_comment' %>

          <%= will_paginate @comments %>
          
         </div>

      <!--</div>-->
     </div>
   </div>
 
 



    <% if current_user && current_user.admin?%>
      <%= link_to 'Edit', edit_product_path(@product), class: "btn btn-default" %>
    <%end%>

   <%= link_to 'Back', products_path %>
 
 </div>